use strict;
use warnings;
use version;
use Getopt::Alt;
use Data::Dumper qw/Dumper/;
use English qw/ -no_match_vars /;
use FindBin qw/$Bin/;
use Path::Tiny;
use App::BambooCli;

our $VERSION = version->new('0.0.1');
my ($name)   = $PROGRAM_NAME =~ m{^.*/(.*?)$}mxs;

my %option = (
    out     => undef,
    verbose => 0,
    man     => 0,
    help    => 0,
    VERSION => 0,
);

exit App::BambooCli->new->start();

__DATA__

=head1 NAME

bamboo - Interact with a Bamboo server via the command line

=head1 VERSION

This documentation refers to bamboo version 0.0.1

=head1 SYNOPSIS

   bamboo [option]
   bamboo projects [option]
   bamboo project [option]
   bamboo plans [option]

 OPTIONS:
  -c --config key=value
                Set config values e.g.
                - hostname
                - username
                - password

  -v --verbose  Show more detailed option
     --version  Prints the version information
     --help     Prints this help information
     --man      Prints the full documentation for bamboo

